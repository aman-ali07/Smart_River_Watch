# ============================================
# Smart River Watch - Environment Variables
# ============================================
# Copy these to your .env file and fill in your actual values

# ============================================
# FIREBASE CONFIGURATION (REQUIRED)
# ============================================
# Get from: Firebase Console > Project Settings > General > Your apps > Web app
EXPO_PUBLIC_FIREBASE_API_KEY=your-api-key-here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id-here
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id-here
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id-here
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# API CONFIGURATION (OPTIONAL)
# ============================================
EXPO_PUBLIC_API_URL=https://api.smartriverwatch.com

# ============================================
# GOOGLE MAPS (OPTIONAL)
# ============================================
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY_ANDROID=your-google-maps-api-key-android
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY_IOS=your-google-maps-api-key-ios

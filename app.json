{
  "expo": {
    "name": "smart_river_watch",
    "slug": "smart_river_watch",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "smartriverwatch",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#0091F5"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to detect waste in images.",
          "cameraPermission": "The app accesses your camera to take photos for waste detection."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Smart River Watch to use your location to automatically include it in your reports.",
          "locationAlwaysPermission": "Allow Smart River Watch to use your location.",
          "locationWhenInUsePermission": "Allow Smart River Watch to use your location to automatically include it in your reports."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}

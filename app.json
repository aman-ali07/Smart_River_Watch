{
  "expo": {
    "name": "Smart River Watch",
    "slug": "smart-river-watch",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "smartriverwatch",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E90FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartriverwatch.app",
      "buildNumber": "1"
    },
    "android": {
      "package": "com.smartriverwatch.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#1E90FF",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E90FF",
          "dark": {
            "backgroundColor": "#0057A7"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#0091F5"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to detect waste in images.",
          "cameraPermission": "The app accesses your camera to take photos for waste detection."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Smart River Watch to use your location to automatically include it in your reports.",
          "locationAlwaysPermission": "Allow Smart River Watch to use your location.",
          "locationWhenInUsePermission": "Allow Smart River Watch to use your location to automatically include it in your reports."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
